#!/bin/bash
OUTPUT_STORE_DIR=@CMAKE_CURRENT_SOURCE_DIR@/output

# check to see if files exist
if [ @HAVE_NETCDF@ = True ]; then
  outputs=( a g m )
else
  outputs=( a g )
fi
for prefix in ${outputs[*]}; do
  for label in @EFIT_LABEL@; do
    if ! test -e ${prefix}${label}; then
      echo "File does not exist: ${prefix}${label}"
      exit 1
    fi
  done
done

if [ @RFILE_TEST@ = True ]; then
  if ! test -e x@EFIT_NEXT@; then
    echo "File does not exist: x${next}"
    exit 1
  fi
  if ! test -e esave.dat; then
    echo "File does not exist: esave.dat"
    exit 1
  fi
  # fit data can be output for any test, but we only use it with rfile tests for simplicity
  if ! test -e fitout.dat; then
    echo "File does not exist: fitout.dat"
    exit 1
  fi
elif [ @ENABLE_PARALLEL@ = ON ]; then
  for (( i = 0; i < @EFIT_TIME@; i++ )); do
    if [ $i -lt 10 ]; then
      label=0000$i
    elif [ $i -lt 100 ]; then
      label=000$i
    elif [ $i -lt 1000 ]; then
      label=00$i
    elif [ $i -lt 10000 ]; then
      label=0$i
    else
      label=$i
    fi	      
    if ! test -e esave${label}.dat; then
      echo "File does not exist: esave${label}.dat"
      exit 1
    fi
  done
else
  if ! test -e esave.dat; then
    echo "File does not exist: esave.dat"
    exit 1
  fi
fi

# Check the output of the run itself.  use petscdiff because it's an easily
# portable way of avoiding testing the numbers -- it's testing the text
if [ @ENABLE_PARALLEL@ = ON ]; then
  @CMAKE_SOURCE_DIR@/bin/petscdiff -j -f 'grep -v table_di | grep -v netcdf | grep -v /green | grep -v r= | grep -v msec | grep -v consistent | grep -v Chisq | grep -v Ip-Exp | grep -v -e "^$" | grep -v weights | grep -v parameters | grep -v symmetrize | grep -v limiter | grep -v individually | grep -v Version | grep -v EFIT-AI | grep -v symmetrize | grep -v mode' -F 'grep -v table_di | grep -v netcdf | grep -v /green | grep -v r= | grep -v msec | grep -v consistent | grep -v Chisq | grep -v Ip-Exp | grep -v -e "^$" | grep -v weights | grep -v parameters | grep -v symmetrize | grep -v limiter | grep -v individually | grep -v EFIT-AI | grep -v symmetrize | grep -v mode' ${OUTPUT_STORE_DIR}/run_efit_mpi.out run_efit.out
  exit $?
else
  @CMAKE_SOURCE_DIR@/bin/petscdiff -j -f 'grep -v table_di | grep -v netcdf | grep -v /green | grep -v Version | grep -v EFIT-AI | grep -v symmetrize | grep -v mode' -F 'grep -v table_di | grep -v netcdf | grep -v /green | grep -v EFIT-AI | grep -v symmetrize | grep -v mode' ${OUTPUT_STORE_DIR}/run_efit.out run_efit.out
  exit $?
fi
