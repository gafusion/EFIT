              /d/osf/lib/libnetcdf.a
      DDLIBS= $(DLIBS) -L/usr/local/lib ./lin-dp.a  blas-dp.a
      FFLAGS= -w -O1  -extend_source  -convert big_endian -align dcommons -fpe3
      FC=f77
      NETCDF = /d/osf/include
    endif
  endif
endif
